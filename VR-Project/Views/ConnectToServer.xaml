<UserControl x:Class="VR_Project.Views.ConnectToServer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VR_Project.Views"
        mc:Ignorable="d">
    <Grid>
        <StackPanel Visibility="{Binding ServerSelect}" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border BorderBrush="Black" BorderThickness="1">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <Label Width="100" Content="IP Address:"/>
                        <TextBox Width="100" Text="{Binding IPAddress}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Width="100" Content="Port nummer:"/>
                        <TextBox Width="100" Text="{Binding PortNummer}"/>
                    </StackPanel>

                </StackPanel>
            </Border>
            <Button Margin="10" Content="Connect to Server" Command="{Binding Path=ConnectToServer}"/>

        </StackPanel>

    </Grid>
</UserControl>
