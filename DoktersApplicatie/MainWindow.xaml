<Window x:Name="MainWindow1" x:Class="DoktersApplicatie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoktersApplicatie"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TabControl x:Name="TabControl" Margin="0,0,212,0" Grid.RowSpan="2" Width="550">
            <TabItem x:Name="ControlPanel" Header="Control Panel">
                <ListView x:Name="Listview" Margin="0,0,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListViewItem x:Name="ListViewItem" BorderThickness="2,2,2,2" Visibility="Visible" BorderBrush="Black">
                        <StackPanel x:Name="LVIStackPanel" Orientation="Horizontal">
                            <Border x:Name="ListViewItemSeperator" BorderThickness="0,0,1,0" BorderBrush="Black" Height="100" Width="400">
                                <StackPanel x:Name="NameInfoBox" Margin="0,0,-302,-2" Width="400" HorizontalAlignment="Left">
                                    <TextBlock x:Name="NameBox" TextWrapping="Wrap" Text="NameBox" FontSize="20" Margin="5,5,0,5"/>
                                    <Border x:Name="TextBoxSeperator" BorderThickness="0,1,0,0" BorderBrush="Black">
                                        <TextBlock x:Name="InfoBox" TextWrapping="Wrap" Text="InfoBox" FontSize="15" Margin="5,5,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                    </Border>
                                </StackPanel>
                            </Border>
                            <StackPanel x:Name="ButtonBox" Width="130">
                                <Button x:Name="MoreInfoButton" Content="More info" HorizontalAlignment="Stretch" Margin="5,5,5,5" FontSize="15"/>
                                <Button x:Name="SessionButton" Content="Sesion Placeholder" Margin="5,5,5,5" FontSize="15"/>
                                <Button x:Name="EmergencyStopButton" Content="Emergency stop" Margin="5,5,5,5" FontSize="15"/>
                            </StackPanel>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </TabItem>
        </TabControl>
        <Grid x:Name="ChatGrid"
                        Margin="574,0,1,0" Grid.RowSpan="2">
            <StackPanel x:Name="ChatStackPanel">
                <ScrollViewer x:Name="ChatScrollView">
                    <StackPanel x:Name="ChatPanel" 
                        Background="White" Height="407" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                        
                        
                            />
                </ScrollViewer>
                <StackPanel x:Name="ChatMessagePanel" Orientation="Horizontal">
                    <TextBox x:Name="MessageBox"  TextWrapping="Wrap" Height="28" Width="185" FontSize="15"/>
                    <Button x:Name="MessageButton" Content="Send" Margin="5,0,0,0" MinWidth="36"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
